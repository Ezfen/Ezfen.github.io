@import "variables.styl"

.allcategory 
  position absolute
  right 15px
  top 15px
  display block
  width 21px
  height 18px
  border-radius 4px
  border 1px solid #CCC
  color #CCC
  text-decoration none
  background-position center
  background-repeat no-repeat
  padding 20px
  transition all 300ms linear
  z-index 9

  cursor pointer

  i
    color #CCC
    transition all 300ms linear
    .fa .fa-rocket
      font-size 1.1em
    position absolute
    top 12px
    left 10px

  &:hover
    border 1px solid red
    i
      color red

.search 
  right 65px
  i
    left 11px

@media screen and (max-width: 960px) {
  #returnTop {
    position: fixed;
    right: 9px;
  }
}